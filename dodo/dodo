#!/usr/bin/python3
"""Entrypoint for dodo"""

import os
import sys


def print_usage():
    """Print usage information"""
    print("dodo is a simple test framework used to write tests for Python \
        application")
    print("dodo <test-directory>")


def main(test_dir):
    """Main function"""
    # TODO: Use Python 3 Path module.
    parent_dir = os.path.normpath(os.path.join(os.path.abspath(test_dir), ".."))
    sys.path.append(parent_dir)
    import testdir
    print(dir(testdir))


if __name__ == "__main__":
    try:
        if len(sys.argv) < 2:
            print_usage()
            sys.exit(128)

        main(sys.argv[1])
    except Exception as exception:
        print(exception)
